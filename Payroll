import java.util.Hashtable;
import java.time.LocalDateTime;

public class Payroll{
  
  private Date workStart;
  private Date workEnd;
  private String currentID;
  pravate Hashtable employees;
  
  public static void createEmployee(Employee worker)
  {
    employees.put(worker.getID(), worker);
  }
  
  public static void deleteEmployee(Employee worker)
  {
    employees.remove(worker.getID());
  }
  
  public static void login(String idnum, String password)
  {
    if (employees.containsKey(idnum) && employees.get(idnum).getPassword() == password)
    {
      employees.get(idnum).logIn();
      currentID = idnum;
    }
  }
  
  public static void logout()
  {
    employees.get(currentID).logOut();
  }
  
  public static void clockIn(Employee worker)
  {
    workStart = Date();
  }
  
  public static void clockOut(Employee worker)
  {
    workEnd = Date();
  }
  
  public static ArrayList<Employee> getActiveEmployees()
  {
     
  }
